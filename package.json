{
	"private": true,
	"sideEffects": false,
	"scripts": {
		"build": "run-s build:css build:remix",
		"build:css": "tailwindcss -m -i ./styles/app.css -o app/styles/app.css",
		"build:remix": "remix build",
		"dev": "run-p dev:*",
		"dev:css": "tailwindcss -w -i ./styles/app.css -o app/styles/app.css",
		"dev:remix": "remix dev",
		"start": "remix-serve build",
		"lint": "eslint --ignore-path .gitignore --fix --ext .ts,.tsx,.js,.jsx .",
		"format": "prettier --ignore-path .gitignore -w \"./**/*.{js,jsx,ts,tsx,html,css,json}\""
	},
	"dependencies": {
		"@remix-run/node": "^1.6.4",
		"@remix-run/react": "^1.6.4",
		"@remix-run/serve": "^1.6.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@remix-run/dev": "^1.6.4",
		"@types/react": "^18.0.15",
		"@types/react-dom": "^18.0.6",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.2.5",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-jsx-a11y": "^6.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.30.1",
		"eslint-plugin-unicorn": "^43.0.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.14",
		"prettier": "^2.7.1",
		"tailwindcss": "^3.1.5",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">=16"
	}
}
